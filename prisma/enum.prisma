enum LoginProvider {
    EMAIL  @map("email")
    GOOGLE @map("google")

    @@map("login_provider")
}

enum UserRole {
    ADMIN    @map("admin")
    CUSTOMER @map("customer")

    @@map("user_role")
}

enum Theme {
    LIGHT  @map("light")
    DARK   @map("dark")
    SYSTEM @map("system")

    @@map("theme")
}

enum Language {
    EN @map("en")
    ID @map("id")

    @@map("language")
}

enum Gender {
    MALE   @map("male") // Laki-laki
    FEMALE @map("female") // Perempuan

    @@map("gender")
}

enum MaritalStatus {
    SINGLE   @map("single") // Belum menikah
    MARRIED  @map("married") // Menikah
    DIVORCED @map("divorced") // Cerai
    WIDOWED  @map("widowed") // Janda/Duda

    @@map("marital_status")
}

enum EmploymentType {
    CIVIL_SERVANT        @map("civil_servant") // Pegawai Negeri Sipil (PNS)
    PRIVATE_EMPLOYEE     @map("private_employee") // Karyawan swasta
    STATE_OWNED_EMPLOYEE @map("state_owned_employee") // Pegawai BUMN
    CONTRACT_EMPLOYEE    @map("contract_employee") // Karyawan kontrak
    FREELANCER           @map("freelancer") // Pekerja lepas
    ENTREPRENEUR         @map("entrepreneur") // Wiraswasta
    BUSINESS_OWNER       @map("business_owner") // Pemilik usaha
    FARMER               @map("farmer") // Petani
    FISHERMAN            @map("fisherman") // Nelayan
    LABORER              @map("laborer") // Buruh
    TEACHER              @map("teacher") // Guru
    LECTURER             @map("lecturer") // Dosen
    HEALTH_WORKER        @map("health_worker") // Tenaga kesehatan
    STUDENT              @map("student") // Pelajar atau mahasiswa
    HOMEMAKER            @map("homemaker") // Ibu rumah tangga
    RETIRED              @map("retired") // Pensiunan
    UNEMPLOYED           @map("unemployed") // Tidak bekerja

    @@map("employment_type")
}

enum Relationship {
    FATHER      @map("father") // Ayah
    MOTHER      @map("mother") // Ibu
    HUSBAND     @map("husband") // Suami
    WIFE        @map("wife") // Istri
    CHILD       @map("child") // Anak
    SIBLING     @map("sibling") // Saudara kandung
    GRANDFATHER @map("grandfather") // Kakek
    GRANDMOTHER @map("grandmother") // Nenek
    UNCLE       @map("uncle") // Paman
    AUNT        @map("aunt") // Bibi
    COUSIN      @map("cousin") // Sepupu
    GUARDIAN    @map("guardian") // Wali
    OTHER       @map("other") // Lainnya

    @@map("relationship")
}

enum LoanType {
    PERSONAL     @map("personal") // Kredit tanpa agunan
    MORTGAGE     @map("mortgage") // KPR
    VEHICLE      @map("vehicle") // Kredit kendaraan
    BUSINESS     @map("business") // Kredit usaha
    MULTIPURPOSE @map("multipurpose") // Kredit multiguna

    @@map("loan_type")
}

enum ApplicationStatus {
    DRAFT     @map("draft") // Draft
    SUBMITTED @map("submitted") // Diajukan
    REVIEWING @map("reviewing") // Sedang ditinjau
    APPROVED  @map("approved") // Disetujui
    REJECTED  @map("rejected") // Ditolak
    DISBURSED @map("disbursed") // Dicairkan
    CANCELLED @map("cancelled") // Dibatalkan

    @@map("application_status")
}

enum CreditScore {
    ELIGIBLE     @map("eligible") // layak
    NOT_ELIGIBLE @map("not_eligible") // tidak layak

    @@map("credit_score")
}

enum LoanStatus {
    ACTIVE    @map("active") // Aktif
    COMPLETED @map("completed") // Lunas
    OVERDUE   @map("overdue") // Menunggak
    DEFAULT   @map("default") // Macet

    @@map("loan_status")
}

enum PaymentStatus {
    ON_TIME @map("on_time") // Tepat waktu
    LATE    @map("late") // Terlambat
    PENDING @map("pending") // Menunggu

    @@map("payment_status")
}

enum ReportType {
    DAILY     @map("daily") // Laporan harian
    WEEKLY    @map("weekly") // Laporan mingguan
    MONTHLY   @map("monthly") // Laporan bulanan
    QUARTERLY @map("quarterly") // Laporan triwulan
    YEARLY    @map("yearly") // Laporan tahunan
    CUSTOM    @map("custom") // Rentang tanggal khusus

    @@map("report_type")
}

enum NotificationType {
    SYSTEM   @map("system") // Notifikasi untuk semua admin
    PERSONAL @map("personal") // Notifikasi untuk user tertentu (customer)

    @@map("notification_type")
}

enum NotificationPriority {
    LOW    @map("low") // Prioritas rendah
    NORMAL @map("normal") // Prioritas normal
    HIGH   @map("high") // Prioritas tinggi
    URGENT @map("urgent") // Prioritas mendesak

    @@map("notification_priority")
}

enum QuestionType {
    SINGLE_CHOICE   @map("single_choice") // Pilihan tunggal (radio)
    MULTIPLE_CHOICE @map("multiple_choice") // Pilihan ganda (checkbox)
    YES_NO          @map("yes_no") // Ya/Tidak
    TRUE_FALSE      @map("true_false") // Benar/Salah
    RATING          @map("rating") // Rating (1-5 stars)
    SCALE           @map("scale") // Skala (1-10)
    PERCENTAGE      @map("percentage") // Input persentase

    @@map("question_types")
}

enum QuestionCategory {
    PERSONAL       @map("personal") // Data personal
    IDENTITY       @map("identity") // Identitas (KTP, SIM, dll)
    CONTACT        @map("contact") // Kontak
    ADDRESS        @map("address") // Alamat
    EMPLOYMENT     @map("employment") // Pekerjaan
    INCOME         @map("income") // Pendapatan
    EXPENSE        @map("expense") // Pengeluaran
    FINANCIAL      @map("financial") // Keuangan umum
    BUSINESS       @map("business") // Bisnis
    COLLATERAL     @map("collateral") // Jaminan/Agunan
    REFERENCE      @map("reference") // Referensi
    EMERGENCY      @map("emergency") // Kontak darurat
    EDUCATION      @map("education") // Pendidikan
    FAMILY         @map("family") // Keluarga
    LOAN_PURPOSE   @map("loan_purpose") // Tujuan pinjaman
    CREDIT_HISTORY @map("credit_history") // Riwayat kredit
    ASSETS         @map("assets") // Aset
    LIABILITIES    @map("liabilities") // Kewajiban/Hutang
    BANK_ACCOUNT   @map("bank_account") // Rekening bank
    OTHER          @map("other") // Lainnya

    @@map("question_categories")
}
